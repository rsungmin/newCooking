<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
  
<configuration>
<typeAliases>

	<typeAlias type="com.koreait.app.member.dao.MemberBean" alias="memberbean"/>
	<typeAlias type="com.koreait.app.recipe.dao.RecipeBean" alias="recipebean"/>
	<typeAlias type="com.koreait.app.recipe.dao.ReplyBean" alias="replybean"/>

 	
 </typeAliases> 
  
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
        <property name="url" value="jdbc:oracle:thin:@localhost:1521:XE"/>
        <property name="username" value="C##WEB"/>
        <property name="password" value="1234"/>
      </dataSource>
    </environment>
  </environments>
  
  <mappers>
  	<mapper resource="com/koreait/sql/member.xml"/>
  	<mapper resource="com/koreait/sql/recipe.xml"/>

  </mappers>
  
  
  
</configuration>